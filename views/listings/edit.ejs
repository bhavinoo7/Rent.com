<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Edit</h1>
                <form action="/listings/<%=listinge.id%>?_method=PATCH" method="post" novalidate
                    class="needs-validation" enctype="multipart/form-data">
                    <div class="mt-3">
                        <label for="title" class="form-label">title</label>
                        <textarea name="listing[title]" class="form-control" required><%= listinge.title %> </textarea>
                    </div>
                    <div class="mt-3">
                        <label for="description" class="form-label">description</label>
                        <textarea name="listing[description]" class="form-control"
                            required><%= listinge.description %></textarea>
                    </div>
                    <div class="mt-3">
                        <label for="image" class="form-label">Image</label>
                        <input name="listing[image]" value=<%=listinge.image.url%> class="form-control" type="file"
                        required multipale>
                    </div>
                    <div class="mt-3">
                        <label for="price" class="form-label">price</label>
                        <input name="listing[price]" value=<%=listinge.price %> class="form-control" type="number"
                        required >
                    </div>
                   
                    <button class="btn btn-dark mt-3">submit</button>
                </form>
            </div>
        </div>

    </body>